{
    "tasks": [
        {
            "type": "shell",
             "label": "G++: build program",
            "windows": {
                "command": "${workspaceRoot}/build.bat",
            },
            "linux": {
                "command": "${workspaceRoot}/build.sh",
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc",
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "g++ compilation"
        },
        // Glad build task
        {
            "type": "shell",
            "label": "G++: build glad",
            "windows": {
                "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
                "args": [
                    "-c",
                    "${workspaceRoot}\\include\\glad\\glad.c",
                    "-o",
                    "${workspaceRoot}\\bintmp\\glad.o"
                ]
            },
            "linux": {
                "command": "/usr/bin/g++ -c ${workspaceRoot}/include/glad/glad.c -o ${workspaceRoot}/bintmp/glad.o && echo \"Build Successful\" || echo \"Build Failed\""
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc",
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds glad"
        },        {
            "type": "shell",
            "label": "G++: build opened file",
            "windows": {
                "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-std=c++17",
                    "-luser32",
                    "-lgdi32",
                    "-lopengl32",
                    "-lgdiplus",
                    "-lShlwapi",
                    "-ldwmapi",
                    "-lstdc++fs",
                    "-o",
                    "${workspaceRoot}\\bin\\${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "/usr/bin/g++ -fdiagnostics-color=always ${file} -g -o ${workspaceRoot}/bin/${fileBasenameNoExtension} ${workspaceRoot}/bintmp/glad.o -I${workspaceRoot}/include -I${workspaceRoot}/include/glad -std=c++17 -lpng -lGL -lX11 -lglfw -ldl -pthread && echo \"Build Successful\" || echo \"Build Failed\""
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc",
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "g++ compilation"
        },
        {
            "type": "shell",
            "label": "G++: build opened file as object",
            "windows": {
                "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-std=c++17",
                    "-luser32",
                    "-lgdi32",
                    "-lopengl32",
                    "-lgdiplus",
                    "-lShlwapi",
                    "-ldwmapi",
                    "-lstdc++fs",
                    "-o",
                    "${workspaceRoot}\\bin\\${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "/usr/bin/g++ -fdiagnostics-color=always -c ${file} -g -o ${workspaceRoot}/bintmp/${fileBasenameNoExtension}.o -std=c++17 -pthread && echo \"Build Successful\" || echo \"Build Failed\""
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc",
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "g++ compilation"
        }
    ],
    "version": "2.0.0"
}